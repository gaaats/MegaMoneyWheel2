<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bacccci"
    android:layout_height="match_parent"
    tools:context=".TeeextyFragment">




    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title_photo_gallery"
        android:layout_width="0dp"
        android:padding="3dp"
        android:textColor="#0E011E"
        android:textAllCaps="true"
        android:fontFamily="@font/montserrat_black"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="@string/app_nameeeeee"
        app:layout_constraintBottom_toBottomOf="@id/guideline_hor_10"
        app:layout_constraintEnd_toStartOf="@id/btn_img_exit"
        app:layout_constraintStart_toStartOf="@id/guideline_vert_05"
        app:layout_constraintTop_toTopOf="@id/guideline_hor_05" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vert_95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vert_05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />


    <ImageView
        android:id="@+id/btn_img_exit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintBottom_toBottomOf="@id/guideline_hor_10"
        app:layout_constraintDimensionRatio="1,1"
        app:layout_constraintEnd_toEndOf="@id/guideline_vert_95"
        app:layout_constraintTop_toTopOf="@id/guideline_hor_05" />


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@id/guideline_vert_95"
        app:layout_constraintStart_toStartOf="@id/guideline_vert_05"
        app:layout_constraintTop_toBottomOf="@id/tv_title_photo_gallery" />

    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/circle_indicator_photo_galery"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:pointerIcon="arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pager" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13" />

    <ScrollView
        android:id="@+id/scroll_v_for_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_hor_95"
        app:layout_constraintEnd_toEndOf="@id/guideline_vert_95"
        app:layout_constraintStart_toStartOf="@id/guideline_vert_05"
        app:layout_constraintTop_toBottomOf="@id/circle_indicator_photo_galery">

        <TextView
            android:id="@+id/tv_photos_photo_gallery_short"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Money, a commodity accepted by general consent as a medium of economic exchange. It is the medium in which prices and values are expressed; as currency, it circulates anonymously from person to person and country to country, thus facilitating trade, and it is the principal measure of wealth. The subject of money has fascinated people from the time of Aristotle to the present day. The piece of paper labeled 1 dollar, 10 euros, 100 yuan, or 1,000 yen is little different, as paper, from a piece of the same size torn from a newspaper or magazine, yet it will enable its bearer to command some measure of food, drink, clothing, and the remaining goods of life while the other is fit only to light the fire. Whence the difference? The easy answer, and the right one, is that modern money is a social contrivance. People accept money as such because they know that others will. This common knowledge makes the pieces of paper valuable because everyone thinks they are, and everyone thinks they are because in his or her experience money has always been accepted in exchange for valuable goods, assets, or services. At bottom money is, then, a social convention, but a convention of uncommon strength that people will abide by even under extreme provocation. The strength of the convention is, of course, what enables governments to profit by inflating (increasing the quantity of) the currency. But it is not indestructible. When great increases occur in the quantity of these pieces of paper—as they have during and after wars—money may be seen to be, after all, no more than pieces of paper. If the social arrangement that sustains money as a medium of exchange breaks down, people will then seek substitutes—like the cigarettes and cognac that for a time served as the medium of exchange in Germany after World War II. New money may substitute for old under less extreme conditions. In many countries with a history of high inflation, such as Argentina, Israel, or Russia, prices may be quoted in a different currency, such as the U.S. dollar, because the dollar has more stable value than the local currency. Furthermore, the country’s residents accept the dollar as a medium of exchange because it is well-known and offers more stable purchasing power than local money."
            android:fontFamily="@font/opensans_extra_bold"
            android:textColor="#ADAAF4"
            android:textSize="15sp"
            android:textStyle="italic" />

    </ScrollView>

    <TextView
        android:id="@+id/tv_dovn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="#0E011E"
        android:textAllCaps="true"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/opensans_regular"
        android:text="@string/app_nameeeeee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_hor_95" />






</androidx.constraintlayout.widget.ConstraintLayout>